<div class="container-fluid">
  <!-- Don't duplicate the container class, you probably already have a
  container wrapper  -->

  <form>

    {{> basics-form-group formRightAligned=true formLabel="Email" formInputType="email" formInputId="example-right-email" }} {{> basics-form-group formRightAligned=true formLabel="Password" formInputType="password" formInputId="example-right-password" }}

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10"> {{> basics-checkbox formLabel="Remember me" }} </div>
    </div>

    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10"> {{> basics-button btnType="submit" btnText="Sign In" btnClass="btn-primary" }} {{> basics-button btnText="Secondary" }} </div>
    </div>

  </form>

</div>